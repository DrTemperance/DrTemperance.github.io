{
	"compilerOptions" : {
		"target"                           : "esnext",
		"module"                           : "esnext",
		"lib"                              : [ "dom", "esnext" ],
		"outDir"                           : "./dist",
		"rootDir"                          : "./",
		"moduleResolution"                 : "node",
		"sourceMap"                        : true,
		"removeComments"                   : true,
		"noEmitOnError"                    : true,
		"strict"                           : true,
		"noImplicitAny"                    : true,
		"strictNullChecks"                 : true,
		"esModuleInterop"                  : true,
		"skipLibCheck"                     : true,
		"forceConsistentCasingInFileNames" : true
	}, "include"      : [ "src/**/*" ], "exclude" : [ "node_modules", "**/*.spec.ts" ]
}